<?xml version="1.0" encoding="utf-8"?>
<Page Stylesheet="Assets/Style/serene_default.css" 
      DataContextType="SereneUI.SampleApp1.ViewModels.MainViewModel">
    <Panel Class="top-panel">
        <TextBlock>{Binding Title}</TextBlock>
    </Panel>
    <Panel Margin="0,52,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
        <Button Class="small" HorizontalAlignment="Left" OnClick="{Command ClickCommand}">
                <TextBlock Class="arial_12">{Binding TestButtonText}</TextBlock>
        </Button>
    </Panel>
    <Panel Id="panel" Padding="20,20,20,20" HorizontalAlignment="Left" VerticalAlignment="Center" Width="350">
        <StackPanel Id="stack_panel" Orientation="Vertical"  HorizontalAlignment="Stretch">
            <Panel Id="inner_panel" Padding="15,15,15,15" HorizontalAlignment="Stretch">
                <Button Id="btn" HorizontalAlignment="Center" Width="150" Height="142" VerticalAlignment="Center" OnClick="{Command ClickCommand}">
                    <TextBlock Class="arial_12" HorizontalAlignment="Left">You can click me</TextBlock>
                </Button>            
            </Panel>
            <Panel Padding="15,15,15,15" HorizontalAlignment="Stretch">
                <Button HorizontalAlignment="Stretch"  VerticalAlignment="Center" IsEnabled="false" OnClick="{Command ClickCommand}">
                    <TextBlock Class="arial_12">I am disabled</TextBlock>
                </Button>
            </Panel>
            <Panel Padding="15,15,15,15" HorizontalAlignment="Stretch">
                <Button HorizontalAlignment="Stretch"  VerticalAlignment="Center" OnClick="{Command ClickCommand}">
                    <TextBlock Class="arial_12">Click me</TextBlock>
                </Button>
            </Panel>
            <Panel Padding="15,15,15,15" HorizontalAlignment="Stretch">
                <Button Class="exit" HorizontalAlignment="Stretch" VerticalAlignment="Center" OnClick="{Command ExitClickCommand}">
                    <TextBlock Class="arial_12">{Binding Exit}</TextBlock>
                </Button>
            </Panel>
        </StackPanel>
    </Panel>
    
    <Panel Id="drag"
           PositionX="400" PositionY="200" Width="170" Height="100"
           IsDraggable="true" 
           OnMouseDown="{Command MouseDownCommand}" 
           OnMouseUp="{Command MouseUpCommand}"
           OnMouseLeave="{Command MouseLeaveCommand}">
        <StackPanel>
            <TextBlock Class="arial_12">I am draggable.</TextBlock>
            <TextBlock Class="arial_12">{Binding LastDragEvent}</TextBlock>            
        </StackPanel>
    </Panel>
    <Panel Id="drag1"
           PositionX="420" PositionY="230" Width="170" Height="100"
           IsDraggable="true"
           OnMouseDown="{Command MouseDownCommand}"
           OnMouseUp="{Command MouseUpCommand}"
           OnMouseLeave="{Command MouseLeaveCommand}">
        <StackPanel>
            <TextBlock Class="arial_12">I am draggable.</TextBlock>
            <TextBlock Class="arial_12">{Binding LastDragEvent}</TextBlock>
        </StackPanel>
    </Panel>
    <Panel Id="drag2"
           PositionX="440" PositionY="260" Width="170" Height="100"
           IsDraggable="true"
           OnMouseDown="{Command MouseDownCommand}"
           OnMouseUp="{Command MouseUpCommand}"
           OnMouseLeave="{Command MouseLeaveCommand}">
        <StackPanel>
            <TextBlock Class="arial_12">I am draggable.</TextBlock>
            <TextBlock Class="arial_12">{Binding LastDragEvent}</TextBlock>
        </StackPanel>
    </Panel>
    <Panel Id="drag3"
           PositionX="460" PositionY="290" Width="300" Height="250"
           IsDraggable="true">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Panel>
                <TextBlock>Write something</TextBlock>
            </Panel>
            <LineEdit Id="inputbox" Placeholder="Say something nice">
            </LineEdit>
            <LineEdit Id="inputbox" Placeholder="Say something funny">
            </LineEdit>
            <LineEdit Id="inputbox" Placeholder="Say something smart">
            </LineEdit>
            <Button Class="small" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <TextBlock VerticalAlignment="Center" Class="arial_12">New Game</TextBlock>
            </Button>
        </StackPanel>
    </Panel>

    <Panel Class="bottom-panel">
        <StackPanel Orientation="Horizontal">
            <Panel Padding="15,15,15,15" HorizontalAlignment="Stretch">
                <Button Class="small" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <TextBlock VerticalAlignment="Center" Class="arial_12">New Game</TextBlock>
                </Button>
            </Panel>
            <Panel Padding="15,15,15,15" HorizontalAlignment="Stretch">
                <Button Class="small" HorizontalAlignment="Stretch"  VerticalAlignment="Center">
                    <TextBlock VerticalAlignment="Center" Class="arial_12">Load Game</TextBlock>
                </Button>
            </Panel>
            <Panel Padding="15,15,15,15" HorizontalAlignment="Stretch">
                <Button Class="small" HorizontalAlignment="Stretch"  VerticalAlignment="Center">
                    <TextBlock VerticalAlignment="Center" Class="arial_12">Settings Game</TextBlock>
                </Button>
            </Panel>
            <Panel Padding="15,15,15,15" HorizontalAlignment="Stretch">
                <Button Class="exit small" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <TextBlock VerticalAlignment="Center" Class="arial_12">Exit</TextBlock>
                </Button>
            </Panel>
        </StackPanel>        
    </Panel>
</Page>